!!!
%html
%head
  %title=title  
  = stylesheet_link_tag 'formtastic', 'formtastic_changes'
  = stylesheet_link_tag 'blueprint/screen', :media => 'screen'
  = stylesheet_link_tag 'blueprint/print',  :media => 'print'
  = stylesheet_link_tag 'admin/admin'  
  <!--[if lt IE]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->  
      
  = javascript_include_tag :defaults
  = csrf_meta_tag
  
%body
  .container
    -# .showgrid  
    #header.box
      %h1= link_to (t'Cookbook'), admin_root_path
      
      .flashes
        = content_tag :p, flash[:success], :id => 'flash_notice', :class => 'success' if flash[:success]
        = content_tag :p, flash[:notice], :id => 'flash_notice', :class => 'notice' if flash[:notice]
        = content_tag :p, flash[:warning], :id => 'flash_warning', :class => 'warning' if flash[:warning]
        = content_tag :p, flash[:error], :id => 'flash_error', :class => 'error' if flash[:error]
        
        -# = content_tag :p, flash[:notice], :id => 'flash_notice', :class => 'notice' if flash[:notice]
        -# #flash_notice.notice

      #nav
        %ul
          %li= link_to (t'Categories'), admin_categories_path
          %li= link_to (t'Dishes'), admin_dishes_path
        
    #section
      = yield
      
    #footer
      %hr
      .center
        I &hearts; my wife 
      